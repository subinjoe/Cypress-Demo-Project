{
  "name": "cypress-demo",
  "version": "1.0.0",
  "description": "Cypress demo project",
  "main": "index.js",
  "scripts": {
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "install:todomvc": "cd todomvc && npm install",
    "postinstall": "npm run install:todomvc",
    "start": "cd todomvc && npm start",
    "delete:reportFolder": "rm -rf mochawesome-report/",
    "report:copyScreenshots": "cp -r cypress/screenshots TestReport/screenshots",
    "test:cli": "npm run delete:reportFolder && cypress run --record --key 6bf29a56-9f43-4e60-820f-278c57c58735",
    "merge:reports": "mochawesome-merge mochawesome-report/*.json > cypress-combined-report.json",
    "create:html:report": "npm run report:copyScreenshots && npm run merge:reports && marge --reportDir TestReport cypress-combined-report.json"
  },
  "devDependencies": {
    "@testing-library/cypress": "^5.0.2",
    "cypress": "^7.4.0",
    "eslint": "^6.7.2",
    "eslint-plugin-chai-friendly": "^0.5.0",
    "eslint-plugin-cypress": "^2.7.0",
    "http-server": "^0.12.1",
    "json-server": "0.15.1",
    "json-server-reset": "1.2.0",
    "mocha": "^8.4.0",
    "mochawesome": "^6.2.2",
    "mochawesome-merge": "^4.2.0",
    "mochawesome-report-generator": "^5.2.0",
    "node-gyp": "^6.0.1"
  },
  "keywords": [],
  "author": "Filip Hric",
  "license": "ISC"
}
